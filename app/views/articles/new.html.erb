<h1>Create article</h1>

<!-- check for errors if the form was previously submitted -->
<% if @article.errors.any? %>
  <h2>The form couldn't be submitted do to the following errors:</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %><br>
    <%=f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%=f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>