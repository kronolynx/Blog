<% if my_obj.errors.any? %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title">
            The form couldn't be submitted do to the following
            <%= pluralize(my_obj.errors.count, "error") %>:
          </h2>
          <div class="panel-body">
            <ul>
              <% my_obj.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>